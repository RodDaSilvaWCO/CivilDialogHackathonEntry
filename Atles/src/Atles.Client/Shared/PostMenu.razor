@inherits Atles.Client.Shared.PostMenuComponent

@if (Display)
{
    <div class="d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="@(PostId)-dropdown-menu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    &nbsp;
                </a>
                <div class="dropdown-menu" aria-labelledby="@(PostId)-dropdown-menu">
                    @if (CanAcceptAnswer)
                    {
                        <a class="dropdown-item" href="#" @onclick:preventDefault="true" @onclick="@AcceptAnswerCallback">
                            <i class="fas fa-check mr-1"></i>
                            @Loc["Accept Answer"]
                        </a>
                    }
                    @if (CanRemoveAnswer)
                    {
                        <a class="dropdown-item" href="#" @onclick:preventDefault="true" @onclick="@RemoveAnswerCallback">
                            <i class="fas fa-times mr-1"></i>
                            @Loc["Remove Answer"]
                        </a>
                    }
                    @if (CanEdit)
                    {
                        <a class="dropdown-item" href="#" @onclick:preventDefault="true" @onclick="@EditCallback">
                            <i class="fas fa-pencil-alt mr-1"></i>
                            @Loc["Edit"]
                        </a>
                    }
                    @if (CanDelete)
                    {
                        <a class="dropdown-item" href="#" @onclick:preventDefault="true" @onclick="@DeleteCallback" data-toggle="modal" data-target="#confirm-modal-delete-reply">
                            <i class="fas fa-trash-alt mr-1"></i>
                            @Loc["Delete"]
                        </a>
                    }
                </div>
            </li>
        </ul>
    </div>
}