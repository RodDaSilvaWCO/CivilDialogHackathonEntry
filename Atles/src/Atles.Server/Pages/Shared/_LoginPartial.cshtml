@if (!SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="btn btn-outline-secondary mr-1 mb-1" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@returnUrl">Login</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-outline-secondary mr-1 mb-1" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@returnUrl">Register</a>
    </li>
}